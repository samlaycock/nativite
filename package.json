{
  "name": "nativite",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/samlaycock/nativite"
  },
  "bin": {
    "nativite": "./dist/cli/index.mjs"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.mjs",
      "require": "./dist/vite/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.mjs",
      "require": "./dist/cli/index.js"
    },
    "./chrome": {
      "types": "./dist/chrome/index.d.ts",
      "import": "./dist/chrome/index.mjs",
      "require": "./dist/chrome/index.js"
    },
    "./css-vars": {
      "types": "./dist/css-vars/index.d.ts",
      "import": "./dist/css-vars/index.mjs",
      "require": "./dist/css-vars/index.js"
    },
    "./globals": {
      "types": "./dist/globals.d.ts"
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "test": "bun test",
    "lint": "oxlint . --type-aware",
    "lint:fix": "oxlint . --type-aware --fix",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt . --check",
    "typecheck": "tsc --noEmit",
    "build": "tsdown && bun -e \"import { cpSync, mkdirSync } from 'node:fs'; mkdirSync('dist', { recursive: true }); cpSync('src/globals.d.ts', 'dist/globals.d.ts');\"",
    "ci:publish": "bun run build && changeset publish"
  },
  "dependencies": {
    "commander": "14.0.3",
    "picocolors": "1.1.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "latest",
    "@types/node": "25.3.0",
    "oxfmt": "0.33.0",
    "oxlint": "1.48.0",
    "oxlint-tsgolint": "0.14.0",
    "tsdown": "0.20.3",
    "vite": "7.3.1"
  },
  "peerDependencies": {
    "typescript": "^5",
    "vite": ">=5"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  }
}
